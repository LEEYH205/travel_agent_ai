# ========================================
# Travel Agent AI - 프로덕션 환경 설정
# ========================================

# ========================================
# 기본 환경 설정
# ========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ========================================
# API 키 설정
# ========================================
# OpenAI API (CrewAI 모드 필수)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenWeather API (날씨 정보)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Google Maps API (경로 및 지도)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# FourSquare API (장소 검색)
FOURSQUARE_API_KEY=your-foursquare-api-key-here

# Tavily Search API (웹 검색)
TAVILY_API_KEY=your-tavily-api-key-here

# ========================================
# 데이터베이스 설정
# ========================================
# PostgreSQL (프로덕션 권장)
DATABASE_URL=postgresql://username:password@localhost:5432/travel_agent_db

# Redis (캐싱 및 세션)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here

# ========================================
# 보안 설정
# ========================================
# CORS 설정
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# JWT 설정
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# 모니터링 및 로깅
# ========================================
# Sentry (에러 추적)
SENTRY_DSN=https://your-sentry-dsn-here

# Logging
LOG_FILE_PATH=/var/log/travel_agent
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Prometheus 메트릭
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# 캐싱 설정
# ========================================
# 캐시 TTL (초)
CACHE_TTL_WEATHER=1800      # 30분
CACHE_TTL_PLACES=86400      # 24시간
CACHE_TTL_DIRECTIONS=3600   # 1시간
CACHE_TTL_WIKI=604800       # 7일
CACHE_TTL_ITINERARY=3600    # 1시간

# 캐시 최대 크기 (MB)
CACHE_MAX_SIZE_MB=500

# ========================================
# 성능 설정
# ========================================
# 워커 프로세스 수
WORKERS=4

# 최대 요청 크기 (MB)
MAX_REQUEST_SIZE_MB=10

# 타임아웃 설정 (초)
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=30

# ========================================
# SSL/TLS 설정
# ========================================
# SSL 인증서 경로
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# SSL 설정
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
SSL_CIPHERS=ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384

# ========================================
# 백업 설정
# ========================================
# 백업 디렉토리
BACKUP_DIR=/var/backups/travel_agent

# 백업 보관 기간 (일)
BACKUP_RETENTION_DAYS=30

# 자동 백업 (cron)
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시

# ========================================
# 알림 설정
# ========================================
# Slack 웹훅 (선택사항)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# 이메일 알림 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@your-domain.com

# ========================================
# 외부 서비스 설정
# ========================================
# CDN 설정 (선택사항)
CDN_URL=https://cdn.your-domain.com

# 이미지 최적화 서비스 (선택사항)
IMAGE_OPTIMIZATION_SERVICE=https://api.imageoptimization.com

# ========================================
# 개발자 도구
# ========================================
# API 문서 접근 제한
ENABLE_API_DOCS=false
API_DOCS_PASSWORD=your-api-docs-password

# 디버그 모드 (프로덕션에서는 false)
ENABLE_DEBUG_TOOLBAR=false

# ========================================
# 지역화 설정
# ========================================
# 기본 언어
DEFAULT_LANGUAGE=ko

# 지원 언어
SUPPORTED_LANGUAGES=ko,en,ja,zh

# 시간대
TIMEZONE=Asia/Seoul

# ========================================
# 사용법
# ========================================
# 1. 이 파일을 .env로 복사
# 2. 모든 API 키를 실제 값으로 교체
# 3. 보안 키들을 강력한 랜덤 값으로 변경
# 4. 도메인과 호스트 설정을 실제 환경에 맞게 수정
# 5. 데이터베이스 연결 정보를 실제 환경에 맞게 설정

# 보안 주의사항:
# - SECRET_KEY는 최소 50자 이상의 랜덤 문자열 사용
# - JWT_SECRET_KEY는 최소 32자 이상의 랜덤 문자열 사용
# - 모든 API 키는 안전하게 보관하고 정기적으로 로테이션
# - 프로덕션 환경에서는 DEBUG=false로 설정
# - 로그 파일에는 민감한 정보가 포함되지 않도록 주의
